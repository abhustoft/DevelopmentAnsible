[core]
  editor = vim
  excludesfile = {{ git_config_dir }}/.gitignore
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  filemode = false

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[gc]
  auto = 1

[alias]
  ci = commit
  civ = commit -v
  st = status
  co = checkout
  br = branch
  bra = branch -a
  brr = branch -r
  up = pull origin
  di = diff
  df = diff
  lg = log -p
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p

[user]
  name = {{ git_username }}
  email = {{ git_email }}

[rerere]
  enabled = true

[push]
  default = current

[apply]
  whitespace = nowarn

[url "https://github.com"]
  insteadOf = git://github.com
